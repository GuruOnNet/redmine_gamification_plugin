<h2>ランキング</h2>

<div id="user-ranking">
  <ul id="ranking-list">
    <li><%= link_to '全体', {action: 'ranking'} %></li>
    <li><%= link_to '月間', {action: 'ranking_monthly'} %></li>
    <li><%= link_to 'バッジ', {action: 'ranking_badge'} %></li>
  </ul>
  <table border="1">
    <tr>
      <th>順位</th>
      <th>ユーザ名</th>
      <th>ポイント</th>
    </tr>
    <% @users.each_with_index do |user, i| %>
      <tr>
        <td><%= i + 1 %></td>
        <td><%= user.user.login %></td>
        <td><%= user.badge_count %></td>
      </tr>
    <% end %>
  </table>

  

</div>

<%= render 'sidebar' %>
