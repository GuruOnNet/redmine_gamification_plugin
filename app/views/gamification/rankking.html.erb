<h2>ランキング</h2>

<div id="user-ranking">
  <ul id="rankking-list">
    <li>全体</li>
    <li>月間</li>
    <li>バッジ</li>
  </ul>
  <table border="1">
    <tr>
      <th>順位</th>
      <th>ユーザ名</th>
      <th>ポイント</th>
    </tr>
    <% @users.each_with_index do |user, i| %>
      <tr>
        <td><%= i + 1 %></td>
        <td><%= user.user.name %></td>
        <td><%= user.point %></td>
      </tr>
    <% end %>
  </table>
</div>

<%= render 'sidebar' %>
