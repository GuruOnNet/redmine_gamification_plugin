<h2>Ranking</h2>

<div id="user-ranking">
  <table border="1">
    <tr>
      <th>Rank</th>
      <th>Username</th>
      <th>Point</th>
    </tr>
    <% @users.each_with_index do |user, i| %>
      <tr>
        <td><%= i + 1 %></td>
        <td><%= user.user.name %></td>
        <td><%= user.point %></td>
      </tr>
    <% end %>
  </table>
</div>

<%= render 'sidebar' %>
